<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.marquinho.myapplication.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/ligacaoButton"
                android:layout_weight="1"
                android:src="@drawable/ic_local_phone_black_36dp"
                android:onClick="chamaLigacao"
                android:clickable="true" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/imagemButton"
                android:layout_weight="1"
                android:src="@drawable/ic_local_see_black_36dp"
                android:onClick="chamaImagem"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/msgButton"
                android:layout_weight="1"
                android:src="@drawable/ic_local_post_office_black_36dp"
                android:onClick="chamaMSG" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/documentoButton"
                android:layout_weight="1"
                android:src="@drawable/ic_description_black_36dp"
                android:nestedScrollingEnabled="false"
                android:onClick="chamaDocumento" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/videoButton"
                android:layout_weight="1"
                android:src="@drawable/ic_videocam_black_36dp"
                android:onClick="chamaVideo" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/webButton"
                android:layout_weight="1"
                android:src="@drawable/ic_language_black_36dp"
                android:onClick="chamaWeb" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/audioButton"
                android:layout_weight="1"
                android:src="@drawable/ic_volume_up_black_36dp"
                android:onClick="chamaAudio" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/contatoButton"
                android:layout_weight="1"
                android:src="@drawable/ic_contacts_black_36dp"
                android:onClick="chamaContato" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
